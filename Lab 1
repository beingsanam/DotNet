using System;
class Vowel
{
    static void Main(string[] args)
    {
        Console.WriteLine("Enter an alphabet");
        char ch = (char)Console.Read();
        if(ch =='a' ||  ch == 'e' || ch=='i' || ch=='o' || ch == 'u')
        {
            Console.WriteLine("It is vowel");
        }
        else
        {
            Console.WriteLine("It is consonant");
        }
    }
}

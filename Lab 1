3.

using System;
class Prime
{
    static void Main(string[] args)
    {
        Console.WriteLine("Prime numbers 100 - 200");
        int i;
        for(i = 100; i <= 200; i++)
        {
            int x = 0;
            for(int n = 2; n <= i / 2; n++)
            {
                if(i% 2 == 0)
                {
                    x = x + 1;
                    break;
                }
            }
            if(x == 0)
            {
                Console.WriteLine( i );
            }
        }
    }
}



///



using System;
class Series
{
    static void Main(string[] args)
    {
        for(int i=1;i<=5;++i)
        {
            for(int j=1; j <= i; ++j)
            {
                Console.Write("*");
            }
            Console.Write("\n");
        }
        
    }
}






